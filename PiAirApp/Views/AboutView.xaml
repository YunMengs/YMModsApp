<UserControl
    x:Class="YMModsApp.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YMModsApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="30"
            Text="发货猫" />
        <Image Grid.Row="1" Source="/favicon.ico" />
        <TextBlock
            Grid.Row="2"
            Text="杭州衔尾蛇科技有限公司成立于2020年，是一家垂直于物流领域的IOT科技公司。致力于打造物流IOT循环生态。链接用户、物流、平台、商家，为每个包裹赋能感知、交互、提升效率、节约资源。 基于IOT技术为循环环保、智慧物流、包装碳中和提供解决方案。"
            TextWrapping="Wrap" />
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>
        <TextBlock
            Grid.Row="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Copyright  (C) 2020-2024 XWS BLE" />
    </Grid>
</UserControl>
